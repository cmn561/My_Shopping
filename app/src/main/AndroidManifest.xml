<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cristiannavarrete.my_shopping" >

    <!--Lists the different activities used by this application.-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SellerMainPage"
            android:screenOrientation="portrait"
            android:label="Seller Main Page">
        </activity>
        <activity
            android:name=".BuyerMainPage"
            android:screenOrientation="portrait"
            android:label="Buyer Main Page">
        </activity>
        <activity
            android:name=".ItemInfoPage"
            android:screenOrientation="portrait"
            android:label="Item Info Page">
        </activity>
        <activity
            android:name=".AddProductPage"
            android:screenOrientation="portrait"
            android:label="Add New Product">
        </activity>
        <activity
            android:name=".ShoppingCart"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:label="Add New Product">
        </activity>
        <activity
            android:name=".Checkout"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:label="Add New Product">
        </activity>
        <activity
            android:name=".SellerChangeAttributes"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:label="Change Product">
        </activity>
        <activity
            android:name=".FinancesPage"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:label="Change Product">
        </activity>
    </application>

</manifest>
